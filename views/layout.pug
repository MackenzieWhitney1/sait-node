doctype html
html(lang="en")
  head
    title My Site - #{title}
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Home Page
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    link#styleToChange(rel='stylesheet' href='styles.css')
  body(onload="changeStyleByTime()")
    .topnav
      a(href='/home') Home
      a(href='/about') About
      a(href='/contact') Contact
      a(href='/demo') Demo
      a(href='/create-post') Create Post
    block content
      p Hello World
    block foot
      #footer
        p Author: &copy; Mackenzie Whitney
  script.
    function changeStyleByTime() {
    const linkTag = document.getElementById("styleToChange");
    const currentHour = new Date().getHours();
    // const currentHour = 15;
    console.log(currentHour);
    linkTag.setAttribute("href", `${currentHour <= 12 ? "morning" : "evening"}.css`);
    }